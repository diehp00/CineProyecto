@model Usuario

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar Usuario - CINEvSIION</title>
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>

<body>

    <div class="container my-5">
        <h2 class="text-center text-primary mb-4">Editar Usuario</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <!-- Campo Nombre de Usuario -->
            <div class="form-group mb-3">
                <label for="nombreUsuario" class="form-label">Nombre de Usuario</label>
                <input asp-for="NombreUsuario" class="form-control" id="nombreUsuario" required />
            </div>

            <!-- Campo Contraseña -->
            <div class="form-group mb-3">
                <label for="contraseña" class="form-label">Contraseña</label>
                <input asp-for="Contraseña" type="password" class="form-control" id="contraseña" required />
            </div>

            <!-- Campo Rol -->
            <div class="form-group mb-3">
                <label for="rol" class="form-label">Rol</label>
                <select asp-for="Rol" class="form-control" id="rol" required>
                    <option value="Administrador" selected="@((Model.Rol ?? "") == "Administrador")">Administrador
                    </option>
                    <option value="Cliente" selected="@((Model.Rol ?? "") == "Cliente")">
                        Cliente</option>
                </select>
            </div>

            <!-- Campo Correo Electrónico -->
            <div class="form-group mb-3">
                <label for="correoElectronico" class="form-label">Correo Electrónico</label>
                <input asp-for="CorreoElectronico" type="email" class="form-control" id="correoElectronico" required />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-danger mt-3" href="/Admin/GestionarUsuarios">Cancelar</a>
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
