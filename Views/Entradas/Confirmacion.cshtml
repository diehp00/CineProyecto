@model List<Entrada>

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Confirmación de Compra</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>

<body>
 <div class="container mt-5">
        <h2 class="text-primary mb-4">Confirmación de tu Compra</h2>

        <p>Gracias por tu compra. Aquí tienes los detalles de tus entradas:</p>

        <!-- Mostrar información del descuento -->
        <div class="alert alert-info">
            @ViewData["MensajeDescuento"]
        </div>

        <div class="row">
            @foreach (var entrada in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="@entrada.Pelicula.ImagenUrl" class="card-img-top" alt="@entrada.Pelicula.Titulo">
                        <div class="card-body">
                            <h5 class="card-title">@entrada.Pelicula.Titulo</h5>
                            <p class="card-text">Horario: @entrada.Horario.FechaHora.ToString("g")</p>
                            <p class="card-text">Asiento: @entrada.Asientos</p>
                            <p class="card-text">Correo Electronico: @entrada.CorreoElectronico</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>

