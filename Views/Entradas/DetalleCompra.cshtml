@model Entrada

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detalle de Compra - CINEvSIION</title>
    <!-- Enlace al CSS de Bootstrap -->
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>
<body>



<div class="container mt-5">
    <h2 class="text-primary mb-4">Detalle de Compra</h2>

    <div class="row">
        <div class="col-md-4">
            @if (Model.Pelicula != null)
            {
                <img src="@Model.Pelicula.ImagenUrl" class="img-fluid rounded shadow-sm" alt="@Model.Pelicula.Titulo">
            }
        </div>
        <div class="col-md-8">
            <h3>@Model.Pelicula?.Titulo</h3>
            <p><strong>Fecha de Compra:</strong> @Model.FechaCompra</p>
            <p><strong>Horario:</strong> @Model.Horario.FechaHora.ToString("g")</p> <!-- Mostrar el horario -->
            <p><strong>Cantidad de Entradas:</strong> @Model.CantidadEntradas</p>
            @* <p><strong>Precio Total:</strong> @Model.PrecioTotal â‚¬</p> *@
            <a href="/" class="btn btn-success mt-3">Volver a Inicio</a>
        </div>
    </div>
</div>


<!-- Scripts de Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
