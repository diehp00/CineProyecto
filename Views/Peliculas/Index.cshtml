    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />

<div class="container my-4">
    <h2 class="text-center mb-4">Películas en Cartelera</h2>
    <div class="row">
        @foreach (var pelicula in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <img src="@pelicula.ImagenUrl" class="card-img-top" alt="Imagen de @pelicula.Titulo">
                    <div class="card-body">
                        <h5 class="card-title">@pelicula.Titulo</h5>
                        <p class="card-text text-muted">@pelicula.Descripcion</p>
                        <p><strong>Género:</strong> @pelicula.Genero</p>
                        <p><strong>Fecha de Estreno:</strong> @pelicula.FechaEstreno.ToShortDateString()</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
