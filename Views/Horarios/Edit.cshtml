@model Horario

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar Horario - CINEvSIION</title>
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
</head>

<body>

    <div class="container my-5">
        <h2 class="text-center text-primary mb-4">Editar Horario</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="FechaHora"></label>
                <input asp-for="FechaHora" type="datetime-local" class="form-control" />
                <span asp-validation-for="FechaHora" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SalaId"></label>
                <select asp-for="SalaId" asp-items="@(new SelectList(ViewBag.Salas, "Id", "NombreSala"))"
                    class="form-control">
                    <option value="">Seleccione una sala</option>
                </select>
                <span asp-validation-for="SalaId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
                    <a class="btn btn-danger mt-3" href="/Admin/GestionarHorarios">Cancelar</a>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
