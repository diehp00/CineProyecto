@{
    ViewData["Title"] = "Gestionar Promociones";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewData["Title"]</title>
    <style>
        .table-actions a {
            margin-right: 5px;
        }
        h2 {
            font-size: 2rem;
            font-weight: bold;
        }
        body {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <!-- Encabezado -->
        <h2 class="text-center text-primary mb-4">Gestionar Promociones</h2>
        
        <!-- Tabla -->
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Título</th>
                        <th scope="col">Fecha Inicio</th>
                        <th scope="col">Fecha Fin</th>
                        <th scope="col">Descuentos (%)</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var promocion in Model)
                    {
                        <tr>
                            <td>@promocion.Descripcion</td>
                            <td>@promocion.FechaInicio.ToShortDateString()</td>
                            <td>@promocion.FechaFin.ToShortDateString()</td>
                            <td>@promocion.Descuento %</td>
                            <td class="text-center">
                                <div class="table-actions">
                                    <a class="btn btn-warning btn-sm" href="/Promociones/Edit/@promocion.Id">Editar</a>
                                    <a class="btn btn-danger btn-sm" href="/Promociones/Delete/@promocion.Id">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Botón para agregar promoción -->
        <div class="text-center">
            <a class="btn btn-danger mt-3" href="/Admin/AdministradorDashboard">Cancelar</a>
            <a class="btn btn-success mt-3" href="/Promociones/Create/">Agregar Promoción</a>
        </div>
    </div>

    <!-- Script de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
