@{
    ViewData["Title"] = "Panel de Administración";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
        }
        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        }
        .admin-btn {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .admin-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>

<body class="bg-light">
    <div class="container text-center py-5">
        <!-- Encabezado -->
        <h1 class="text-primary mb-4">Panel de Administración</h1>
        <!-- Botones -->
        <div class="row g-3">
            <div class="col-md-4">
                <a href="/Admin/GestionarPeliculas" class="btn btn-primary admin-btn py-3 w-100">
                    <i class="fas fa-film me-2"></i>Gestionar Películas
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Admin/GestionarUsuarios" class="btn btn-primary admin-btn py-3 w-100">
                    <i class="fas fa-users me-2"></i>Gestionar Usuarios
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Admin/GestionarSalas" class="btn btn-primary admin-btn py-3 w-100">
                    <i class="fas fa-door-open me-2"></i>Gestionar Salas
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Admin/GestionarEntradas" class="btn btn-primary admin-btn py-3 w-100">
                    <i class="fas fa-ticket-alt me-2"></i>Gestionar Entradas
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Admin/GestionarHorarios" class="btn btn-primary admin-btn py-3 w-100">
                    <i class="fas fa-clock me-2"></i>Gestionar Horarios
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Admin/GestionarPromociones" class="btn btn-primary admin-btn py-3 w-100">
                    <i class="fas fa-tags me-2"></i>Gestionar Promociones
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
