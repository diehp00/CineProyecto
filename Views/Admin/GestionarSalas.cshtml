@model List<Sala>

@{
    ViewData["Title"] = "Gestionar Salas";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewData["Title"]</title>
    <style>
        .table-actions a {
            margin-right: 5px;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container my-5">
        <!-- Encabezado -->
        <h2 class="text-center text-primary mb-4">Gestionar Salas</h2>
        
        <!-- Tabla -->
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-success">
                    <tr>
                        <th scope="col">Nombre de Sala</th>
                        <th scope="col">Capacidad</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sala in Model)
                    {
                        <tr>
                            <td>@sala.NombreSala</td>
                            <td>@sala.Capacidad</td>
                            <td class="text-center">
                                <div class="table-actions">
                                    <a class="btn btn-warning btn-sm" href="/Salas/Edit/@sala.Id">Editar</a>
                                    <form asp-action="Delete" asp-controller="Salas" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@sala.Id" />
                                        <a class="btn btn-danger btn-sm" href="/Salas/Delete/@sala.Id">Eliminar</a>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- BotÃ³n para agregar sala -->
        <div class="text-center">
            <a class="btn btn-danger mt-3" href="/Admin/AdministradorDashboard">Cancelar</a>
            <a class="btn btn-success mt-3" href="/Salas/Create">Agregar Sala</a>
        </div>
    </div>

    <!-- Script de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>